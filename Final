package com.company;
import java.util.*;
public class Employee {

    private String name;
    private static int ID = 0;
    private String Qualification;
    private ArrayList <String> Skills;


    int GenerateID(){
        ID++;
        return ID;
    }

    public String getName() {
        return name;
    }

    public void setName(String a) {
        name = a;
    }

    public void setQualification(String a) {
        Qualification = a;
    }

    public String getQualification() {
        return Qualification;
    }

    public ArrayList<String> getSkills() {
        return Skills;
    }

    public void setSkills(ArrayList<String> a) {
        Skills = a;
    }

    public Employee(){
        System.out.println("\nI will initialize all the values by null.");
    }

    public Employee(String a, String b, ArrayList<String> c){
        name = a;
        Qualification = b;
        Skills = c;
    }
    void display(){
        System.out.println("\nYou are Selected.");
        System.out.println("Name = " + name);
        System.out.println("ID = " + GenerateID());
        System.out.println("Qualification = " + Qualification);
        System.out.println("Skills = " + Skills);
    }

    void skillsCheck(){
        System.out.println("Finding desired candidate for the React Team.");
    }
}

class MonthlySalariedEmployee extends Employee{

    int BasicPay;
    int Allowances;

    MonthlySalariedEmployee(){
        BasicPay = 0;
        Allowances = 0;
    }
    MonthlySalariedEmployee(String a, String b, ArrayList<String> c, int d, int e){
        super(a, b, c);
        BasicPay = d;
        Allowances = e;
    }

    @Override
    void skillsCheck() {
        for (int i=0; i<3; i++){
            if (getSkills().get(i) == "React"){
                BasicPay += 500;
                display();
                System.out.println("Salary = " + BasicPay);
                System.out.println("Allowances = " + Allowances);
            }
        }
    }
}


//edit

class HourlySalariedEmployee extends Employee{
    private int WorkedHours;
    private int PerHourSalary;

    public int getPerHourSalary() {
        return PerHourSalary;
    }

    public int getWorkedHours() {
        return WorkedHours;
    }

    public void setPerHourSalary(int a) {
        PerHourSalary = a;
    }

    public void setWorkedHours(int a) {
        WorkedHours = a;
    }

    HourlySalariedEmployee (){
        WorkedHours = 0;
        PerHourSalary = 0;
    }
    HourlySalariedEmployee(String a, String b, ArrayList<String> c, int d, int e){

        super(a, b, c);
        WorkedHours = d;
        PerHourSalary = e;

    }

    @Override
    void skillsCheck() {
        for (int i=0; i<3; i++){
            if (getSkills().get(i) == "React" && WorkedHours == 4){
                PerHourSalary += 1000;
                display();
                System.out.println("Per hour Salary = " + PerHourSalary);
                System.out.println("No. of Worked hours = " + WorkedHours);
            }
        }
    }
}

class Main {

    public static void main(String[] args) {

        ArrayList<String> skill = new ArrayList<String>();
        skill.add("Python");
        skill.add("React");
        skill.add("Java");

        MonthlySalariedEmployee obj1 = new MonthlySalariedEmployee();
        MonthlySalariedEmployee obj2 = new MonthlySalariedEmployee("Ahmed", "MA", skill, 22000, 1000);
        obj2.skillsCheck();

        MonthlySalariedEmployee obj3 = new MonthlySalariedEmployee("Hasnain", "MA", skill, 22000, 1000);
        obj3.skillsCheck();

        System.out.println("\nHOURLY PAID EMPLOYEES: ");
        HourlySalariedEmployee obj4 = new HourlySalariedEmployee();
        HourlySalariedEmployee obj5 = new HourlySalariedEmployee("Bilal", "ME", skill, 4, 1050);
        obj5.skillsCheck();
    }
}
